---
const { name, avatar, url, bio } = Astro.props;
---

<a
	href={url}
	class="relative max-w-full overflow-hidden rounded-3xl border transition hover:shadow-md hover:shadow-brand-background-secondary">
	<div class="flex flex-row items-center gap-4 p-4">
		<img class="h-24 w-24 flex-none rounded-xl" src={avatar} />
		<div class="flex flex-col flex-wrap justify-center">
			<span class="text-2xl font-semibold">{name}</span>
			<span class="line-clamp-3">{bio}</span>
		</div>
	</div>
	<div
		class="cardbg absolute left-0 top-0 z-[-1] h-full w-full rounded-3xl bg-cover bg-center bg-no-repeat object-cover blur-[5vh]"
		style={{ backgroundImage: `url(${avatar})` }}>
	</div>
</a>
