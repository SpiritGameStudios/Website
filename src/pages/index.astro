---
import Logo from "@components/Logo.astro";
import Default from "@layouts/Default.astro";
---

<Default>
	<div class="flex h-full flex-col justify-center gap-2">
		<div class="flex w-fit flex-col gap-4">
			<Logo />
			<br class="select-none" />
			<span class="text-4xl font-thin tracking-wider sm:text-6xl"> REDEFINING. </span>
			<hr class="border-brand-border" />
			<span> Spirit Studios is a small Minecraft modding group that makes vanilla-style mods for Fabric. </span>
			<div class="flex flex-row flex-wrap gap-2">
				<span class="rounded-xl bg-brand-background-secondary p-2">
					<a href="https://github.com/spiritgamestudios"> Github </a>
				</span>
				<span class="rounded-xl bg-brand-background-secondary p-2">
					<a href="https://modrinth.com/organization/spirit"> Modrinth </a>
				</span>
			</div>
			<div class="flex select-none flex-row flex-wrap gap-2">
				<a target="_blank" href="https://github.com/callmeechocodes">
					<img
						class="h-10 w-10 rounded-full border border-brand-border"
						src="https://github.com/callmeechocodes.png"
					/>
				</a>
				<a target="_blank" href="https://github.com/hamaindustries">
					<img
						class="h-10 w-10 rounded-full border border-brand-border"
						src="https://github.com/hamaindustries.png"
					/>
				</a>
				<a target="_blank" href="https://github.com/worldwidepixel">
					<img
						class="h-10 w-10 rounded-full border border-brand-border"
						src="https://github.com/worldwidepixel.png"
					/>
				</a>
			</div>
		</div>
	</div>
</Default>
